<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_above="@id/keyboard"
        android:layout_below="@id/text">
    </ListView>
    <TextView
        android:id="@+id/fuzzyInputTestCharShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f25b63"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/init_mode_button"
        android:text="Ok"
        />
    <Button
        android:id="@+id/fuzzyInputTestBegin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignBaseline="@id/init_mode_button"
        android:layout_alignBottom="@id/init_mode_button"
        android:text="Start Test"
        />
    <ImageView
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/keyboard"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/init_mode_button"
        android:layout_marginStart="13dp"
        android:layout_marginTop="18dp"
        android:text="TextView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/candidates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/text"
        android:layout_below="@id/text"
        android:layout_marginTop="54dp"
        android:textSize="30sp"
        android:text="" />

    <Button
        android:id="@+id/confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="Confirm" />

    <TextView
        android:id="@+id/readList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/candidates"
        android:layout_marginStart="84dp"
        android:layout_toEndOf="@id/text"
        android:textSize="30sp"
        android:text="" />

    <Button
        android:id="@+id/init_mode_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="relative" />

    <Button
        android:id="@+id/speedControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/confirm_button"
        android:text="Speed" />

    <Button
        android:id="@+id/testMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/speedControl"
        android:text="Normal" />

    <TextView
        android:id="@+id/voice_speed_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/testMode"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/speedControl"
        android:text="50"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp" />
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/testTurnChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TESTTURN"
        android:layout_below="@id/testMode"
        android:layout_alignParentEnd="true"
        />
    <TextView
        android:id="@+id/testTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testMode"
        android:layout_marginEnd="16dp"
        android:layout_toStartOf="@id/testTurnChange"
        android:text="8"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textSize="30sp" />
    

</RelativeLayout>